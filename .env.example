# RoboSafe Sentinel Environment Variables
# Copy to .env and customize

# Environment
ROBOSAFE_ENV=development  # development, staging, production

# Logging
ROBOSAFE_LOGGING__LEVEL=INFO
ROBOSAFE_LOGGING__FORMAT=console  # console, json

# API
ROBOSAFE_API__HOST=0.0.0.0
ROBOSAFE_API__PORT=8080

# Cell identification
ROBOSAFE_CELL__ID=WELD-MIG-001
ROBOSAFE_CELL__NAME=Cellule Soudage MIG

# Robot connection
ROBOSAFE_ROBOT__IP=192.168.1.10

# PLC connection
ROBOSAFE_PLC__IP=192.168.1.20

# Optional: Redis for caching
# REDIS_URL=redis://localhost:6379

# Optional: InfluxDB for metrics
# INFLUXDB_URL=http://localhost:8086
# INFLUXDB_TOKEN=your-token
# INFLUXDB_ORG=your-org
# INFLUXDB_BUCKET=robosafe
