{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "RoboSafe: Run Server",
            "type": "debugpy",
            "request": "launch",
            "module": "robosafe.main",
            "args": ["--config", "config/config.yaml"],
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src",
                "ROBOSAFE_ENV": "development"
            },
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "RoboSafe: Simulation Mode",
            "type": "debugpy",
            "request": "launch",
            "module": "robosafe.main",
            "args": ["--mode", "simulation", "--verbose"],
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src",
                "ROBOSAFE_ENV": "development"
            },
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "RoboSafe: API Server Only",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "robosafe.api.server:app",
                "--reload",
                "--host", "0.0.0.0",
                "--port", "8080"
            ],
            "cwd": "${workspaceFolder}/src",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            },
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Python: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            },
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Pytest: All Tests",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "tests/",
                "-v",
                "--tb=short"
            ],
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            },
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Pytest: Current File",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "${file}",
                "-v",
                "-s"
            ],
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            },
            "console": "integratedTerminal",
            "justMyCode": false
        }
    ]
}
